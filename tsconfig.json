{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "paths": {
      "@config": ["config/index.ts"],
      "@constants/*": ["constants/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"]
}
